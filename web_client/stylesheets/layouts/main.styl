.g-analysis-nav-container
  width 40vw
  height calc(100vh - 52px)
  display inline-block
  // transition 1s
  position absolute
  left 0
  margin-left 0

  #appsNav
    height calc(50% - 26px)
    .panel
      margin-bottom 0
      background-color transparent
      border none
      border-radius 0
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05)
      list-style none
    .panel:hover
      background-color #f6f6f6
      transition all 0.2s
  .g-global-nav-main
    padding-left 0
    width calc(100% - 20px)
    display inline-block
    height 100%
    .appNavBlock
      background #7b777724
      padding 10px
      margin 10px 0
      font-size 20px
      font-family inherit
.task-container
  width 60vw
  float right
  height calc(100vh - 52px)
  // transition 1s
.appsNavPanel.panel
  margin-bottom 0
  background-color rgba(0, 0, 0, 0)
  border none
  border-radius 0
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  list-style none
.appsArch
  margin-left 30px
  margin-right 10px
  max-height 300px