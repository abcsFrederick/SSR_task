#link-selection
  margin-top 20px
#submitTask
  padding 11px 22px 11px 17px

.g-ori-selection-container, .g-seg-selection-container
  padding 0
  text-align center

  .selection-list
      list-style-type none
      border 1px solid #eaeaea
      padding 4px 5px 3px
      font-size 15px
      border-top 1px solid #efefef
      border-radius 5px
      margin 5px
      background linear-gradient(270deg, #fff 50%, rgba(28, 255, 1, 0.129) 0)
      transition all 2s ease
      background-size 250% 100%
      background-position 100% 100%

.g-selection-container-header-info
    padding 10px
