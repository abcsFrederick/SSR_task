.modal-dialog
  .modal-content
    form#nnmodel-form.modal-form(role="form")
      .modal-header
        button.close(data-dismiss="modal", aria-hidden="true", type="button") &times;
        h4.modal-title= title
      .modal-body
        #h-task-nnmodel-container.hidden
          .row
            #nnmodel-WSIs-select.h-task-nnmodel-select.button.btn.btn-default.col-md-12(type='button')
              | #[span.icon-folder] Select a Folder
          .row
            Using current opened image()
        .btn-group(data-toggle="buttons")
          each nnmodel in nnmodels
            label
              input.nnmodelInfer(type="radio", name="inferOption", value=nnmodel.id)
              | #{nnmodel.name}
        // #infer-WSIs-select.h-task-infer-select.button.btn.btn-default.form-check-inline(type='button')
        //   | #[span.icon-folder] Select a WSIs Folder
        // #h-task-infer-container.hidden
        .row
          input#aperio-image-id.form-control.query-id(placeholder="Batch selection")
        .row
          ul#infer-preview.preparehaloZone.g-item-list(style='padding: 0px;')

        .g-validation-failed-message
      .modal-footer
        button.btn.btn-small.btn-primary.run-batch-infer(type='button') Run
